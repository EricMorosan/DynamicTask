@using Task = Proiect.Models.Task;
@*@using MultipleModelInOneView;*@
<h2 style="text-align: center"> @Model.Project.title </h2>
@model dynamic
<br />

<p> 📅 Data de început a proiectului: @Model.Project.start_date</p>
  
<details >
    <summary>Descrierea Proiectului</summary>
<p>@Model.Project.content</p>
</details>


<ul id="id1">
@foreach (var task in Model.Tasks)
{ @if (task.ProjectId == Model.Project.Id)
    {
        <li>
                
                <h6>@task.content</h6>
                <p>@task.status</p>
                <div class="cardbuttons">
                <form method="post" action="/Tasks/Show/@task.Id">
                    <button class="button-8" type="submit">Vezi comentarii</button>
                </form>

                <form method="get" action="/Tasks/Edit/@task.Id">
                    <button class="button-8" type="submit">Editare task</button>
                </form>

                <form method="post" action="/Tasks/Delete/@task.Id">
                    <button class="button-8" type="submit">Sterge taskul</button>
                </form>
                </div>
        </li>
    }
}
</ul>

<ul>
<form method="get" action="/Tasks/New/@Model.Project.Id">
    <button  class="button-8" type="submit">Adăugare task</button>
</form>
</ul>
<br>
<form method="get" action="/Projects/Edit/@Model.Project.Id">
    <button class="button-1" type="submit">Editează proiectul</button>
</form>
<br>
<form method="post" action="/Projects/Delete/@Model.Project.Id">
    <button class="button-1" type="submit">Șterge proiectul</button>
</form>
<br>
<form method="get" action="/Projects/Index">
    <button class="button-1"  type="submit">Înapoi la proiecte</button>
</form>















